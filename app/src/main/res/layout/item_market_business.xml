<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
    <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="86dp">
            <ImageView
                    android:id="@+id/item_market_business_img"
                    android:background="@drawable/test_img_1"
                    android:layout_marginTop="7dp"
                    android:layout_width="140dp"
                    android:layout_height="76dp"/>
            <TextView
                    android:id="@+id/item_market_business_rank"
                    android:layout_marginLeft="10dp"
                    android:padding="1dp"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:text="No.1"
                    android:textColor="@color/color_white"
                    android:background="@color/app_theme"
                    android:layout_width="32dp"
                    android:layout_height="14dp"/>

        </RelativeLayout>
        <RelativeLayout
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="86dp">
            <TextView
                    android:id="@+id/item_market_business_title"
                    android:textSize="18sp"
                    android:text="标题"
                    android:textColor="@color/color_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="本周新款："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/item_market_business_week"
                        android:text="1049"
                        android:textColor="@color/app_theme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView

                        android:layout_marginLeft="10dp"
                        android:text="微信款："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/item_market_business_wechat"
                        android:text="1049"
                        android:textColor="@color/app_theme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView

                    android:scaleType="centerCrop"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_keyboard_arrow_right_grey_400_24dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/item_market_business_content"
            android:layout_marginTop="5dp"
            android:text="测试说明测试说明测试说明测试21321321说明测试说明测试说明测试说明测试说明测试说明测试说明测试说明测试说明"
            android:textColor="@color/color_black"
            android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/item_market_business_online"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:padding="4dp"
                android:text="40.72万人在线"
                android:textColor="@color/color_white"
                android:background="@drawable/shape_market_business_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/item_market_business_sale"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:padding="4dp"
                android:text="出货50.32万款"
                android:textColor="@color/color_white"
                android:background="@drawable/shape_market_business_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/item_market_business_comment"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:padding="4dp"
                android:text="48110评论"
                android:textColor="@color/color_white"
                android:background="@drawable/shape_market_business_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>