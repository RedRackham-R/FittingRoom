<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:circleimageview="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/ic_android_pink_600_24dp"
            android:id="@+id/item_market_hotest_recy_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            circleimageview:civ_border_color="@color/app_theme"
            circleimageview:civ_border_overlay="false"
            circleimageview:civ_border_width="2px"/>
    <TextView
            android:id="@+id/item_market_hotest_recy_textView"
            android:layout_marginTop="2dp"
            android:text="百搭T恤"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>