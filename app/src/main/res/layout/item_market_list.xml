<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_whiteE">
    <RelativeLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp">
        <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/item_market_list_timeIcon"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_access_time_gray80_24dp"
                android:layout_width="18dp"
                android:layout_height="18dp"/>
        <TextView
                android:textSize="12sp"
                android:id="@+id/item_market_list_history"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/item_market_list_timeIcon"
                android:text="1小时前 激烈**海胆下的订单卖家发货了"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:background="@drawable/layer_sanjiaoxing"
                android:layout_marginStart="22dp"
                android:layout_alignParentBottom="true"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="78dp">
        <RelativeLayout
                android:id="@+id/item_market_list_headImgContainer"
                android:layout_centerVertical="true"
                android:layout_width="56dp"
                android:layout_height="56dp">
            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/item_market_list_shopImg"
                    android:src="@drawable/icon_head"
                    android:layout_centerInParent="true"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
            <TextView
                    android:id="@+id/item_market_list_shopAge"
                    android:padding="2dp"
                    android:textColor="@color/red"
                    android:background="@drawable/selector_market_list_shop_age"
                    android:text="三年店"
                    android:textSize="6sp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <LinearLayout
                android:layout_alignTop="@+id/item_market_list_headImgContainer"
                android:layout_toEndOf="@+id/item_market_list_headImgContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                <TextView
                        android:textSize="12sp"
                        android:id="@+id/item_market_list_shopName"
                        android:text="海胆的小店"
                        android:textColor="@color/color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textSize="12sp"
                        android:id="@+id/item_market_list_onLine"
                        android:layout_marginStart="5dp"
                        android:text="·当前离线"
                        android:textColor="@color/color_gray80"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:gravity="center_vertical"
                    android:padding="2dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:background="@drawable/shape_market_list_advantage"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_check_circle_green_600_24dp"
                            android:layout_width="16dp"
                            android:layout_height="16dp"/>
                    `<TextView
                            android:textSize="10sp"
                            android:padding="2dp"
                            android:textColor="@color/color_green_600"
                            android:layout_marginStart="2dp"
                            android:text="48小时退"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shape_market_list_advantage"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_check_circle_green_600_24dp"
                            android:layout_width="16dp"
                            android:layout_height="16dp"/>
                    <TextView
                            android:textSize="10sp"
                            android:padding="2dp"
                            android:textColor="@color/color_green_600"
                            android:layout_marginStart="2dp"
                            android:text="热销旺铺"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginStart="10dp"
                        android:background="@drawable/shape_market_list_advantage"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_check_circle_green_600_24dp"
                            android:layout_width="16dp"
                            android:layout_height="16dp"/>
                    <TextView
                            android:textSize="10sp"
                            android:padding="2dp"
                            android:textColor="@color/color_green_600"
                            android:layout_marginStart="2dp"
                            android:text="诚信保障"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/shape_market_list_message"
                android:text="留言"
                android:layout_alignParentEnd="true"
                android:textColor="@color/red"
                android:layout_width="58dp"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
            android:background="@color/color_white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/color_whiteE"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="32dp">
            <TextView
                    android:id="@+id/item_market_list_comment"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="348人评论"
                    android:background="@color/pink"
                    android:textColor="@color/color_white"
                    android:layout_weight="0.20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            <TextView
                    android:textSize="10sp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="很不满"
                    android:textColor="@color/color_gray80"
                    android:layout_weight="0.16"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            <TextView
                    android:textSize="10sp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="不满"
                    android:textColor="@color/color_gray80"
                    android:layout_weight="0.16"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            <TextView
                    android:textSize="10sp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="一般"
                    android:textColor="@color/color_gray80"
                    android:layout_weight="0.16"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            <TextView
                    android:textSize="10sp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="满意"
                    android:textColor="@color/color_gray80"
                    android:layout_weight="0.16"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            <TextView
                    android:background="@drawable/shape_market_list_rating"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="很满意"
                    android:textColor="@color/color_white"
                    android:layout_weight="0.16"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="180dp">
            <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/item_market_list_good_img_1"
                    android:background="@color/color_gray80"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <TextView
                    android:textSize="10sp"
                    android:id="@+id/item_market_list_good_price_1"
                    android:layout_marginBottom="5dp"
                    android:text="散批：￥48.6"
                    android:textColor="@color/color_white"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_marginStart="5dp"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="180dp">
            <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/item_market_list_good_img_2"
                    android:background="@color/color_gray80"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <TextView
                    android:textSize="10sp"
                    android:id="@+id/item_market_list_good_price_2"
                    android:layout_marginBottom="5dp"
                    android:text="散批：￥48.6"
                    android:textColor="@color/color_white"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_marginStart="5dp"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="180dp">
            <ImageView
                    android:id="@+id/item_market_list_good_img_3"
                    android:background="@color/color_gray80"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <TextView
                    android:textSize="10sp"
                    android:scaleType="centerCrop"

                    android:id="@+id/item_market_list_good_price_3"
                    android:layout_marginBottom="5dp"
                    android:text="散批：￥48.6"
                    android:textColor="@color/color_white"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:src="@drawable/ic_location_on_red_100_24dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
            <TextView
                    android:textSize="10sp"
                    android:text="广州.白云区国际皮具城"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
                android:id="@+id/item_market_list_location"
                android:layout_marginTop="5dp"
                android:background="@color/color_gray80"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/item_market_list_focus"
                    android:padding="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <ImageView
                        android:src="@drawable/icon_guanzhu"
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>
                <TextView
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/app_theme"
                        android:text="关注"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/color_gray80"
                    android:layout_width="1px"
                    android:layout_height="match_parent"/>
            <LinearLayout
                    android:id="@+id/item_market_list_share"
                    android:padding="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <ImageView
                        android:src="@drawable/icon_fenxiang"
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>
                <TextView
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:text="分享"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/color_gray80"
                    android:layout_width="1px"
                    android:layout_height="match_parent"/>
            <LinearLayout
                    android:id="@+id/item_market_list_sale"
                    android:padding="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <ImageView
                        android:src="@drawable/icon_zhuanmai"
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>
                <TextView
                        android:textSize="12sp"
                        android:text="转卖"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/color_gray80"
                    android:layout_width="1px"
                    android:layout_height="match_parent"/>
            <LinearLayout
                    android:id="@+id/item_market_list_shop"
                    android:padding="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="0.30"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <ImageView
                        android:src="@drawable/icon_dianpu"
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>
                <TextView
                        android:textSize="12sp"
                        android:text="进店看货"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>