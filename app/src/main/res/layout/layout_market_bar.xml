<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <View
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    <android.support.v7.widget.Toolbar
            android:gravity="center_vertical"
            android:background="@color/transparent"
            android:id="@+id/layout_market_bar"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <ImageView
                android:id="@+id/layout_market_bar_scan"
                android:src="@drawable/icon_scanqr"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="start"/>

        <ImageView
                android:id="@+id/layout_market_bar_logo"
                android:src="@drawable/icon_logo_them"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/layout_market_bar_search"
                android:src="@drawable/ic_search_white_24dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:text="OK"/>

    </android.support.v7.widget.Toolbar>
    <include
            android:id="@+id/layout_market_bar_switch"
            layout="@layout/layout_market_switch"/>

</LinearLayout>